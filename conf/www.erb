server {
	listen       80;
	server_name <% if @domain != "" -%><%= @domain %> www.<%= @domain -%><% end -%><% if @title == "bespectacled" -%> www.bespectacledcyborg.com bespectacledcyborg.com<% end -%><% if @title != "bespectacled" -%> <%= @title %>.bespectacledcyborg.com<% end -%>;	
	
	access_log /www/<%= @owner %>/logs/<%= @title %>-access.log slim;
	error_log /www/<%= @owner %>/logs/<%= @title %>-error.log;

	root /www/<%= @owner %>/<%= @title %>;
	
	index index.php;

    location / {
        # Check if a file exists, or route it to index.php.
        try_files $uri $uri/ /index.php;
    }

    location ~ \.php$ {
        fastcgi_pass        127.0.0.1:9000;
        include             fastcgi_params;
        fastcgi_param       PATH_INFO $fastcgi_script_name;
        fastcgi_param       SCRIPT_FILENAME $document_root$fastcgi_script_name;
    }
}
